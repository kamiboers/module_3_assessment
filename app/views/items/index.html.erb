<div class="container">
  <%= form_tag :search, method: :get, class: "form-inline" do %>
  <div class="form-group search-field">
    <%= text_field_tag :zip, nil, placeholder: "Search by Zip Code", class: "form-control" %>
    <%= submit_tag "Locate", class: "btn btn-info" %>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
  <div class="col-sm-3 item-id-<%= item.id.to_s %>">
    <h5><%= item.name %></h5>
    <%= link_to(image_tag(item.image_url), item_path(item)) %>
    <p>
      <%= item.description %>
    </p>
  </div>
  <% end %>
</div>

